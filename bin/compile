#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail immediately on non-zero exit code.
set -e
# Fail immediately on non-zero exit code within a pipeline.
set -o pipefail
# Fail on undeclared variables.
set -u
# Debug, echo every command
#set -x

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
BP_DIR=`cd $(dirname $0); cd ..; pwd`

cd $BUILD_DIR

# Sentry stuff
if [ -f ".sentryclirc" ]
then
  echo '       Found existing `.sentryclirc` file'
  
  echo '       Installing sentry-cli'
  export PATH=$PATH:~/.bin
  export INSTALL_DIR=~/.bin
  mkdir -p ~/.bin

  curl -sL https://sentry.io/get-cli/ | bash

  sentry-cli releases new $GIT_REV
  sentry-cli releases set-commits --auto $GIT_REV
  sentry-cli releases files $GIT_REV upload-sourcemaps ./ -x .js -x .map --validate --verbose --rewrite --strip-common-prefix
  sentry-cli releases finalize $GIT_REV
fi